---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

import License from "@components/widgets/License.astro";
import PostFilter from "@components/widgets/PostFilter.astro";
import PostInfo from "@components/widgets/PostInfo.astro";
import { DATE_FORMAT } from "@config";
import BaseLayout from "@layouts/BaseLayout.astro";
import dayjs from "@utils/dayjs";
import Waline from "@/components/comments/Waline.astro";
import MainCard from "@/components/MainCard.astro";

type BlogEntry = CollectionEntry<"blog">;

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((blog: BlogEntry) => ({
    params: { slug: blog.slug },
    props: { blog },
  }));
}

const { blog } = Astro.props as { blog: BlogEntry };

const { Content, remarkPluginFrontmatter, headings } = await blog.render();

const displayDate = blog.data.pubDate
  ? dayjs(blog.data.pubDate).format(DATE_FORMAT)
  : "";

const image = new URL(`/og/${blog.slug}.png`, Astro.site).toString();
const url = new URL(`/blog/${blog.slug}`, Astro.url.origin);

// Waline server URL from env
const WALINE_SERVER_URL = import.meta.env.PUBLIC_WALINE_SERVER_URL as
  | string
  | undefined;

// Optional: allow per-post disable via frontmatter `comments: false`
const commentsEnabled =
  (blog.data as Record<string, unknown>).comments !== false;
const canRenderComments = commentsEnabled && !!WALINE_SERVER_URL;
---

<BaseLayout
  title={blog.data.title}
  description={blog.data.description}
  image={image}
  headings={headings}
  showTOC={true}
>
  <MainCard
    title={blog.data.title}
    description={blog.data.description}
    image={blog.data.image}
    infoIcon="lucide:info"
  >
    <PostInfo
      pubDate={displayDate}
      badge={blog.data.badge}
      word={remarkPluginFrontmatter.totalCharCount}
      time={remarkPluginFrontmatter.readingTime}
    />

    <div class="mb-6">
      <PostFilter categories={blog.data.categories} tags={blog.data.tags} />
    </div>

    <div class="mt-8">
      <div
        id="content"
        class="prose max-w-none prose-headings:scroll-mt-20 prose-img:rounded-xl prose-img:mx-auto"
      >
        <Content />

        <License
          url={url}
          title={blog.data.title}
          image={blog.data.image}
          pubDate={blog.data.pubDate}
          badge={blog.data.badge}
          categories={blog.data.categories}
          tags={blog.data.tags}
          word={remarkPluginFrontmatter.totalCharCount}
          time={remarkPluginFrontmatter.readingTime}
        />

        {canRenderComments && (
          <section class="mt-10 pt-6 border-t border-base-content/10">
            <h2 class="text-2xl font-semibold mb-4">Comments</h2>
            <Waline
              serverURL={WALINE_SERVER_URL}
              lang="zh-CN"
              reaction={true}
              pageview={true}
            />
          </section>
        )}

        {!WALINE_SERVER_URL && commentsEnabled && (
          <section class="mt-10 pt-6 border-t border-base-content/10">
            <h2 class="text-2xl font-semibold mb-2">Comments</h2>
            <p class="opacity-70 text-sm">
              Comment system is not configured. Please set{" "}
              <code>PUBLIC_WALINE_SERVER_URL</code>.
            </p>
          </section>
        )}
      </div>
    </div>
  </MainCard>
</BaseLayout>
